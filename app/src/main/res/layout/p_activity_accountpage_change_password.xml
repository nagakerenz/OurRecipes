<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountPage.PChangePassword"
    android:orientation="vertical"
    android:background="#FBF4D1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:layout_gravity="center"
            android:layout_marginTop="-45dp"
            app:srcCompat="@drawable/b_rectangle"
            android:alpha="100"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/signupCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-300dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="379dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:layout_editor_absoluteY="286dp">

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="64dp"
                android:visibility="gone"
                android:backgroundTint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="Create New Password"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="Your new password must be different from previous used password."
                android:textSize="13sp"
                android:textAlignment="center"/>


            <RelativeLayout
                android:id="@+id/fillForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <EditText
                    android:id="@+id/oldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="Old Password"
                    android:drawableRight="@drawable/b_password_toggle"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"/>

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Must be at least 6 characters"
                    android:textSize="13sp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="8dp"
                    android:drawableRight="@drawable/b_password_toggle"
                    android:hint="@string/prompt_password"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"
                    android:layout_below="@+id/oldPassword"/>

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="20dp"
                    android:text="Must be at least 6 characters"
                    android:textSize="13sp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/b_password_toggle"
                    android:hint="Confirm password"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"
                    android:layout_below="@id/password"/>

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="20dp"
                    android:text="Both Password must match"
                    android:textSize="13sp"
                    android:textAlignment="center"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fillForm"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="50dp"
                    android:backgroundTint="#1C68F6"
                    android:enabled="true"
                    android:text="Save Changes"
                    app:useMaterialThemeColors="false" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>