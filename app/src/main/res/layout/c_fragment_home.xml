<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".ui.home.CHomeFragment"
    android:backgroundTint="@color/backgroundPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:padding="12dp"
                app:cardElevation="0dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Featured Topics"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="12dp"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2Image"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Categories"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#9CD9FF"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageButton
                        android:id="@+id/breakfast"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:backgroundTint="#05F9E5A1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/c_food_categories_breakfast"
                        android:onClick="categoriesBreakfast"
                        android:contentDescription="Breakfast" />

                    <ImageButton
                        android:id="@+id/lunch"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:backgroundTint="#05F8D5A7"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/c_food_categories_lunch"
                        android:onClick="categoriesLunch"
                        android:contentDescription="Lunch"/>

                    <ImageButton
                        android:id="@+id/dinner"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:backgroundTint="#05F9E5A1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/c_food_categories_dinner"
                        android:onClick="categoriesDinner"
                        android:contentDescription="Dinner"/>

                    <ImageButton
                        android:id="@+id/drink"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:backgroundTint="#05F8D5A7"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/c_food_categories_drink"
                        android:onClick="categoriesDrink"
                        android:contentDescription="Drink" />

                    <ImageButton
                        android:id="@+id/fiber"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:backgroundTint="#05F8D5A7"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/c_food_categories_fiber"
                        android:onClick="categoriesFiber"
                        android:contentDescription="Fiber"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Reels"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/reelsFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/reelsCardView"
                        android:layout_width="160dp"
                        android:layout_height="230dp"
                        android:layout_marginRight="12dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerReels"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/reelsCardView1"
                        android:layout_width="160dp"
                        android:layout_height="230dp"
                        android:layout_marginRight="12dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerReels1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/search1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watching K-Drama?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/c_search_arrow_right"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHome"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
