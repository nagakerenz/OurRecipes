<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LunchPage"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fadeScrollbars="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="14dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="arial"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/teal_700"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/breakfast"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/teal_700"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_breakfast" />

                <ImageButton
                    android:id="@+id/lunch"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="70dp"
                    android:backgroundTint="@color/teal_700"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_lunch" />

                <ImageButton
                    android:id="@+id/dinner"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="140dp"
                    android:backgroundTint="@color/teal_700"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_dinner" />

                <ImageButton
                    android:id="@+id/drink"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="210dp"
                    android:backgroundTint="@color/teal_700"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_drink" />

                <ImageButton
                    android:id="@+id/fiber"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="280dp"
                    android:backgroundTint="@color/teal_700"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_fiber"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUNCH"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="arial"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/icon_breakfast"/>
                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/icon_breakfast"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav_menu" />

        <fragment
            android:id="@+id/nav_host_fragment_activity_bottom_navigation_bar"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navGraph="@navigation/mobile_navigation" />
    </RelativeLayout>
</LinearLayout>




