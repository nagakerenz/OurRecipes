<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4D1"
    tools:context=".ui.search.SearchResult"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Search result"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/searchViewBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAEDB9"
            android:queryHint="Search for Food"
            app:searchIcon="@drawable/c_search_ic_baseline_search_24"
            app:closeIcon="@drawable/c_search_baseline_clear_24"
            app:iconifiedByDefault="false" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/searchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/searchViewBar"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBar"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/textSearchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSearchResult"
            android:layout_marginTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>