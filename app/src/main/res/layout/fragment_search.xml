<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment"
    android:background="#FBF4D1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/textviewutama"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="206px"
            android:layout_height="47px"
            android:gravity="top"
            android:text="Looking For"
            android:textColor="@color/black"
            android:textSize="39px" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="505px"
            android:layout_height="69px"
            android:layout_below="@id/textview1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:text="Easy to Cook"
            android:textColor="@color/black"
            android:textSize="59px"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@+id/textviewutama"
        android:layout_marginTop="0dp"
        android:paddingLeft="25dp"
>

        <SearchView
            android:id="@+id/search1"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#FAEDB9"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:ems="10"
            android:queryHint="Search for Food" />
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/scrollBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/searchBar"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="arial"/>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/fiber_freshsalad" />

                        <CheckBox
                            android:id="@+id/loveButton2"
                            android:layout_width="23dp"
                            android:layout_height="20dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginLeft="160dp"
                            android:layout_marginTop="25dp"
                            android:button="@drawable/favorite_red_to_white"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:useMaterialThemeColors="false"
                            />
                    </RelativeLayout>



                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_breakfast"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_breakfast"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOST FAVORITE DISH"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="arial"/>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_breakfast" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_breakfast"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_breakfast"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
</RelativeLayout>