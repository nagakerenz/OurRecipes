<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#33F9E5A1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/breakfast"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#05F9E5A1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_categories_breakfast" />

        <ImageButton
            android:id="@+id/lunch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="#05F8D5A7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_categories_lunch" />

        <ImageButton
            android:id="@+id/dinner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="140dp"
            android:backgroundTint="#05F9E5A1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_categories_dinner" />

        <ImageButton
            android:id="@+id/drink"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="210dp"
            android:backgroundTint="#05F8D5A7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_categories_drink" />

        <ImageButton
            android:id="@+id/fiber"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="280dp"
            android:backgroundTint="#05F8D5A7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_categories_fiber" />
    </androidx.cardview.widget.CardView>

