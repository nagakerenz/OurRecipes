<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="arial"
                    android:text="BREAKFAST"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:fadeScrollbars="false"
                    android:fillViewport="true" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:fadeScrollbars="false"
                    android:fillViewport="true">

                    <GridLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:layout_gravity="center">

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="Breakfast 1"
                            app:layout_column="0"
                            app:layout_row="0"
                            app:srcCompat="@drawable/breakfast_eggcereal" />

                        <CheckBox
                            android:id="@+id/loveButton"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_marginLeft="118.5dp"
                            android:layout_marginTop="4dp"
                            android:button="@drawable/favorite_red_to_white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:useMaterialThemeColors="false" />

                        <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="Breakfast 2"
                            app:layout_column="1"
                            app:layout_row="0"
                            app:srcCompat="@drawable/breakfast_eggtoast" />

                        <CheckBox
                            android:id="@+id/loveButton1"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginLeft="118.5dp"
                            android:layout_marginTop="4dp"
                            android:button="@drawable/favorite_red_to_white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:useMaterialThemeColors="false"/>

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="Breakfast 3"
                            app:layout_column="0"
                            app:layout_row="0"
                            app:srcCompat="@drawable/breakfast_burito" />

                        <CheckBox
                            android:id="@+id/loveButton2"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginLeft="118.5dp"
                            android:layout_marginTop="14dp"
                            android:button="@drawable/favorite_red_to_white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:useMaterialThemeColors="false" />

                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="Breakfast 4"
                            app:layout_column="1"
                            app:layout_row="1"
                            app:srcCompat="@drawable/breakfast_waffle" />

                        <CheckBox
                            android:id="@+id/loveButton3"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_marginLeft="118.5dp"
                            android:layout_marginTop="13dp"
                            android:button="@drawable/favorite_red_to_white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:useMaterialThemeColors="false" />

                    </GridLayout>
                </ScrollView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>