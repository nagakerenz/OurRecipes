<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.FavoritePage"
    android:padding="10dp"
    android:background="#FBF4D1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FBF4D1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="arial"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp">

        <GridLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/food_icon_breakfast_eggcereal" />

            <CheckBox
                android:id="@+id/loveButton"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/food_icon_breakfast_eggtoast" />

            <CheckBox
                android:id="@+id/loveButton1"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="0"
                app:layout_row="0"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/food_icon_breakfast_burito" />

            <CheckBox
                android:id="@+id/loveButton2"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_row="1"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/food_icon_breakfast_waffle" />

            <CheckBox
                android:id="@+id/loveButton3"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginTop="10dp"

                app:srcCompat="@drawable/food_icon_dinner_spicyramen" />

            <CheckBox
                android:id="@+id/loveButton4"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginTop="10dp"

                app:srcCompat="@drawable/food_icon_dinner_shinramyun" />

            <CheckBox
                android:id="@+id/loveButton5"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginTop="10dp"

                app:srcCompat="@drawable/food_icon_dinner_bimbimbap" />

            <CheckBox
                android:id="@+id/loveButton6"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_row="3"
                android:layout_marginTop="10dp"

                app:srcCompat="@drawable/food_icon_dinner_tteokbokki" />

            <CheckBox
                android:id="@+id/loveButton7"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/favorite_white_to_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
        </GridLayout>
    </ScrollView>
</LinearLayout>