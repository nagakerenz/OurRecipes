<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4D1"
    tools:context=".ui.search.SearchResult"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Search result"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/searchViewBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAEDB9"
            android:queryHint="Search For Food"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/searchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/searchViewBar"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBar"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/textSearchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <GridLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/breakfast_eggcereal" />

            <CheckBox
                android:id="@+id/loveButton"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/selector_wishlist_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/breakfast_eggtoast" />

            <CheckBox
                android:id="@+id/loveButton1"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/selector_wishlist_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/dinner_tteokbokki" />

            <CheckBox
                android:id="@+id/loveButton2"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/selector_wishlist_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/dinner_bimbimbap" />

            <CheckBox
                android:id="@+id/loveButton3"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/selector_wishlist_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_row="2"
                app:layout_column="0"
                app:srcCompat="@drawable/lunch_pasta" />

            <CheckBox
                android:id="@+id/loveButton4"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/selector_wishlist_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_row="2"
                app:layout_column="1"
                app:srcCompat="@drawable/lunch_creamsoup" />

            <CheckBox
                android:id="@+id/loveButton5"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/selector_wishlist_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:useMaterialThemeColors="false" />
        </GridLayout>
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>