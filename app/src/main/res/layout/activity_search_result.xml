<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4D1"
    tools:context=".ui.search.searchResult"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Search result"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/searchViewBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAEDB9"
            android:queryHint="Search For Food"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/searchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/searchViewBar"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBar"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/textSearchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>