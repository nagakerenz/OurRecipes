<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4D1"
    tools:context=".ui.search.searchResult"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Search result"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/searchViewBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAEDB9"
            android:queryHint="Search For Food"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/searchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/searchViewBar"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBar"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/textSearchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/food_eggtoast" />

            <ImageButton
                android:id="@+id/food_loveWhite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="149dp"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_outline_favorite_border_24" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_row="0"
                app:layout_column="1"
                app:srcCompat="@drawable/food_eggcereal" />

            <ImageButton
                android:id="@+id/food_love"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_baseline_favorite_24" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_row="1"
                app:layout_column="0"
                app:srcCompat="@drawable/food_eggtoast" />

            <ImageButton
                android:id="@+id/food_loveWhite1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="149dp"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_outline_favorite_border_24" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_row="1"
                app:layout_column="0"
                app:srcCompat="@drawable/food_eggtoast" />

            <ImageButton
                android:id="@+id/food_loveWhite2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="149dp"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_outline_favorite_border_24" />
        </GridLayout>
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>